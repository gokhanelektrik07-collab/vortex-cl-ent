<script>
function generateCode() {
    let neon = document.getElementById('neon').checked;
    let cape = document.getElementById('cape').checked;
    let fps = document.getElementById('fps').checked;
    let cross = document.getElementById('cross').checked;

    let finalScript = `// ==UserScript==\n// @name Vortex Custom Client\n// @match https://bloxd.io/*\n// @grant none\n// ==/UserScript==\n\n(function() {\n 'use strict';\n`;
    
    if(neon) finalScript += ` console.log('Neon Mod Aktif'); document.body.style.filter = 'contrast(1.1) brightness(1.1)';\n`;
    if(cape) finalScript += ` console.log('Pelerin Yüklendi'); // Pelerin kodu buraya\n`;
    if(fps) finalScript += ` // FPS Sayacı kodu\n`;
    if(cross) finalScript += ` // Crosshair kodu\n`;
    
    finalScript += ` alert('Vortex Client: Seçtiğiniz ${ (neon?1:0)+(cape?1:0)+(fps?1:0)+(cross?1:0) } özellik başarıyla yüklendi! Menü için V tuşuna basın.');\n})();`;

    let output = document.getElementById('codeOutput');
    output.value = finalScript;
    output.style.display = 'inline-block';
    output.select();
    document.execCommand('copy');
    alert("Kod oluşturuldu ve panoya kopyalandı! Şimdi Tampermonkey'e yapıştırabilirsin.");
}
</script>

